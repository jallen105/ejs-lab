<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= name %></title>
</head>
<body>
    <%- include('./partials/nav') %>
  <h1><%= name %></h1>

  <% menuItems.forEach((item) => { %>
        <div class="menu-card">
            <p><%= item.name %> <%= item.rating === 5 ? "⭐" : '' %></p>
            <p>price: <%= item.price %></p>
            <p>rating: <%= item.rating %></p>
            <p><%= item.details %></p>
        </div>
  <% }) %>

</body>
</html>
